{
  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./build"]
}